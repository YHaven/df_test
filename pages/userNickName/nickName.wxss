/*input样式*/
.userName{margin-top:16rpx; padding:35rpx 40rpx;background: #fff;}
.weui-cell{margin: 0;height:66rpx;border:solid 1rpx #ddd;padding-left: 20rpx;}
.user-input{width: 100%;height:66rpx;font-size:36rpx;display: inline-block;}
.user-input input,
.user-input view{height:66rpx;line-height: 66rpx;}
.wrapNoBorder .tip{display: block;font-size:20rpx;color: #bfbfbf;}
.wrap .warning{margin:10rpx 0rpx;}
.confirm{display: flex;justify-content: center;}
.confirm button {width: 690rpx; height: 88rpx;margin-top: 53rpx;display: flex; align-items: center;justify-content: center;}
.confirm .active{background:#09bb07 !important;color:#fff !important;border:1rpx solid #029400;border-radius: 10rpx;}
.confirm .default{background:#dfdfdf !important;color:#fff !important;border-radius: 10rpx;}
.confirm .longTap{background:#179b16 !important;color:#78d177;border:1rpx solid #029400;border-radius:10rpx;}