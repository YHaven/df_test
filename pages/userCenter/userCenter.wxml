<import src="../../component/TopMsgTip/TopMsgTip.wxml"/>
<import src="../../component/MessageToast/MessageToast.wxml"/>
<view class="container">
    <template is="TopMsgTip" wx:if="{{errorMsg}}" data="{{message:errorMsg,animationData:animationData}}"/> 
    <view class="basicInfo">
      <view class="item headImgItem" bindtap="bindTapHeadImg">
        <text class="title">{{text1}}</text>
        <view>
          <image src="{{headImg}}" class="uc-headImg" alt="{{altHeadImg}}"></image>
          <text class="iconfont icon-tiaozhuanjiantou"></text>
        </view>
      </view>
      <view class="item" bindtap='bindTapUserName'>
        <text class="title">{{text2}}</text>
        <view>
          <text class="uc-userName">{{userName}}</text>
          <text wx:if="{{!isUserNameHaveSetted}}" class="iconfont icon-tiaozhuanjiantou" ></text>
          <view  wx:else style='width: 60rpx;'></view>
        </view>
        
        
      </view>
      <view class="item" bindtap='bindTapName'>
        <text class="title">{{text3}}</text>
        <view>
          <text class="uc-name">{{name}}</text>
          <i class="iconfont icon-tiaozhuanjiantou"></i>
        </view>
        
      </view>
      <view class="item" bindtap='bindTapNickName'>
        <text class="title">{{text4}}</text>
        <view>
          <text class="uc-nickName">{{nickName}}</text>
          <text class="iconfont icon-tiaozhuanjiantou"></text>
        </view>
      </view>
      <view class="item">
        <text class="title">{{text5}}</text>
        <view >
          <picker value="{{index}}" bindchange="bindTapSex" value='{{sex === "男" ? 0 :1}}' range="{{array}}">
            <view class="pickerWrap">
              <text class="uc-sex">{{sex}}</text>
              <text class="iconfont icon-tiaozhuanjiantou"></text>
            </view>
          </picker>
        </view>
      </view>
      <view class="item">
        <text class="title">{{text6}}</text>
        <view>
          <picker mode="date" value="{{index}}" bindchange="bindTapBirth" range="{{array}}">
            <view class="pickerWrap">
              <text class="uc-birthday">{{birthday}}</text>
              <text class="iconfont icon-tiaozhuanjiantou"></text>
            </view>
          </picker>
        </view>
        
      </view>
    </view>
    <view class="extraInfo">
      <view class="item" bindtap="bindTapPwSet">
        <text class="title">{{text7}}</text>
        <view>
          <text class="iconfont icon-tiaozhuanjiantou" ></text>
        </view>
      </view>
      <view class="item" bindtap="releaseBtn">
        <text class="title">{{text8}}</text>
        <view>
          <image class="uc-wechatImg" src="{{wechatImg}}" alt="altWeChat"></image>
          <text class="text">{{text9}}</text>
          <text class="iconfont icon-tiaozhuanjiantou" ></text>
        </view>
      </view>
    </view>
    <!-- 底部导航 -->
  <df-bottom-nav navActive="4" isTroupe="{{isTroupe}}"></df-bottom-nav>
  </view>