/* 自定义图集 */
.photo-box{position: fixed;left: 0rpx;top: 0rpx;right: 0rpx;bottom: 0rpx;background: rgba(0, 0, 0, 1);z-index: 20;color: #ffffff;font-size: 28rpx;}
.photo-box .number{font-size: 34rpx;text-align: center;margin-top: 40rpx;}

.photo-box .photo-slider{width: 100%;height: 800rpx;margin-top: 100rpx;}
.photo-box .photo-slider image{width: 100%;}
.photo-box .photo-title{font-size: 34rpx;text-align: center;margin-bottom: 40rpx;}
.photo-box .photo-info{margin-top: 28rpx;}