/* 经营体列表页面 */
.add-entity-btn{margin: 0rpx 30rpx;margin-top: 30rpx;}
 button[type=warn].add-entity-btn{background-color: #f94551;} 
 button[type=warn].hover-add-entity-btn{background-color: #E64340;}  
.entity-list .user-info{min-height:98rpx;border-top: 1px solid #e5e5e5;border-bottom: 1px solid #e5e5e5;padding: 16rpx 20rpx;margin-top: 20rpx;background: #ffffff;font-size: 34rpx; }
.entity-list .user-info .user-img{width: 100rpx;height: 100rpx;float: left;margin-right: 20rpx;}
.entity-list .user-info .user-img image{width: 100%;height: 100%; border-radius: 50rpx;margin-top:1rpx;}
.entity-list .user-info .user-nick{text-overflow:ellipsis;white-space:nowrap;overflow: hidden;margin-top: -5rpx;}
.entity-list .user-info .user-phone{font-size: 28rpx;color: #aaaaaa;margin-top: 7rpx;}
.entity-list .user-phone .icon-text{width: 16rpx;height: 24rpx;float: left;margin-right: -1rpx;margin-top: 1rpx;}
.entity-list .user-phone .icon-text.icon-arrow-right{float: left;margin-top: 2rpx;}
.entity-list .user-phone .phone-string{width: 195rpx;float: left;}
.entity-list .user-phone .icon-text image{width: 100%;height: 100%;}

.entity-list .join-entity{border-top: 1px solid #e5e5e5;border-bottom: 1px solid #e5e5e5;padding: 15rpx 0rpx 8rpx 0rpx;margin-top: 20rpx;background: #ffffff;font-size: 22rpx; display: flex;}
.entity-list .join-entity .join-item{flex: 1;text-align: center;position: relative;}
.entity-list .join-entity .join-item:last-child{border-right: 0rpx;}
.entity-list .join-item .split-line{width: 1rpx;position: absolute;right: -1rpx;top:50%;margin-top: -26rpx; background: #d9d9d9;height: 52rpx;}
.entity-list .join-item .item-img{width: 75rpx;height: 42rpx;line-height: 42rpx;display: inline-block;}
.entity-list .join-item .item-name{margin-top: -5rpx;}
.icon-theatre{width: 100%;height: 100%;}
.icon-troupe{width: 100%;height: 100%;}

.entity-list .data-list{border-top: 1px solid #e5e5e5;border-bottom: 1px solid #e5e5e5;margin-top: 10rpx;background: #ffffff;}
.entity-list .data-list .data-item{position:relative;height: 84rpx;overflow: hidden;padding:31rpx 30rpx 20rpx 0rpx;margin-left:20rpx;}
.entity-list .data-list-preview .data-item{margin-left:0rpx;}
.entity-list .data-list .itemWrap .data-item{border-bottom: 1rpx solid #e5e5e5;}
.entity-list .data-list .itemWrap:last-child .data-item{border-bottom: 0rpx;} 
.entity-list .data-item .item-img{width: 90rpx;height: 79rpx;line-height: 79rpx;float: left;margin-right: 34rpx;text-align: center;}
.entity-list .data-item .item-info .title{width:563rpx;font-size: 34rpx;text-overflow:ellipsis;white-space:nowrap;overflow: hidden;height: 36rpx;line-height: 30rpx;}
.entity-list .data-item .item-info .value{width:563rpx;font-size: 26rpx;color: #aaaaaa;height: 30rpx;line-height: 25rpx;margin-top: 18rpx;text-overflow:ellipsis;white-space:nowrap;overflow: hidden;}
/*切换-点击经营体-阴影*/
.entity-list .data-list-preview .itemWrap{height:164rpx;margin-left:0rpx;}
.data-item.entityShadow{
  margin-left:0rpx !important;
  box-shadow: 0px 2px 16px 1px rgba(71, 14, 2, 0.18)
}
/*UI实体列表和切换列表行间距不一致,俩套样式*/
.entity-list .data-list-preview {margin-top:20rpx;}
.entity-list .data-list-preview .data-item .item-preview{position: absolute;right: 60rpx;bottom: 10rpx;}
.entity-list .data-list-preview .data-item .item-preview .icon-preview{width:33rpx;height:29rpx;color:#ffcc00;}
.entity-list .data-list-preview .data-item {margin-left:20rpx;padding:0rpx;height:164rpx;border-bottom:1px solid #e5e5e5;}
.entity-list .data-list-preview .data-item .itemIndent{position:relative;height: 100rpx;overflow: hidden;padding:18rpx 30rpx 48rpx 0rpx;}
.entity-list .data-list-preview .data-item .item-img{width: 77rpx;height: 70rpx;padding:15rpx 17rpx 15rpx 6rpx;float: left;text-align: center;}
.entity-list .data-list-preview .data-item .item-img .icon-theatre{width:77rpx;height:70rpx;}
.entity-list .data-list-preview .data-item .item-info{width:563rpx;height:100rpx;float:left;}
.entity-list .data-list-preview .data-item .item-info .title{width:566rpx;font-size: 34rpx;text-overflow:ellipsis;white-space:nowrap;overflow: hidden;height: 36rpx;line-height: 30rpx;margin-top:12rpx;margin-bottom:19rpx;}
.entity-list .data-list-preview .data-item .item-info .value{width:563rpx;font-size: 26rpx;color: #aaaaaa;height: 30rpx;line-height: 26rpx;text-overflow:ellipsis;white-space:nowrap;overflow: hidden;}