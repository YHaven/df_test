/* component/SubmitInnerFlow/SubmitInnerFlow.wxss */
@import "../../style/icon.wxss";
/* button 样式 */
.iyanyi-btn-warning{background: #f94551;color: #ffffff;}
.iyanyi-btn-warning-hover{background: #d10714;}
.iyanyi-btn-default{background: #ffffff;}
.iyanyi-btn-default-hover{background: #dfdfdf;}
.iyanyi-opration button{width: 138rpx;height: 54rpx;float: right;line-height: 54rpx;font-size: 24rpx;padding: 0rpx;margin-top: 24rpx;margin-right: 30rpx;}
/* 遮罩层 */
.mask-box{position: fixed;left: 0rpx;top: 0rpx;right: 0rpx;bottom: 0rpx;background: rgba(0, 0, 0, 0.5);z-index: 11;}
/* 提交流程审核样式 */
.submit-flow{position:fixed;bottom: 0rpx;background: #ffffff;width: 100%;z-index: 12;}
.submit-flow .common-submit-form{padding: 40rpx 44rpx;}
.submit-flow .submit-flow-btn{border-radius: 0rpx;height: 80rpx;line-height: 80rpx;font-size: 34rpx;}
.common-submit-form .form-section{margin-bottom: 25rpx;}
.common-submit-form .form-section .section-title{float: left;width: 140rpx;font-size: 28rpx;word-spacing: 4rpx;height: 60rpx;line-height: 60rpx;}
.common-submit-form .form-section .section-value{margin-left: 140rpx;width: 520rpx;}
.common-submit-form .section-value .o{font-size: 20rpx;color: #a9a9a9;}
.common-submit-form .section-value .input-box{border:1px solid #e5e5e5;border-radius: 5rpx;height: 60rpx;line-height: 60rpx;font-size: 24rpx;}
.common-submit-form .section-value .input-box input{height: 60rpx;line-height: 60rpx;}
.common-submit-form .input-box.datetimes text{color: #a9a9a9;}
.common-submit-form .input-box.datetimes view{float: left;}
.common-submit-form .input-box.datetimes input{width: 85rpx;float: left;margin-left: 15rpx;text-align: center;height: 60rpx;line-height: 60rpx;}
.common-submit-form .input-box.datetimes .hours input{width: 115rpx;}
.common-submit-form .input-box.datetimes .minutes input{width: 110rpx;}
.common-submit-form .input-box.datetimes .input,.common-submit-form .input-box.datetimes .input picker{width: 85rpx;float: left;text-align: center;height: 60rpx;line-height: 60rpx;}
.common-submit-form .input-box.datetimes .hours .input,.common-submit-form .input-box.datetimes .hours .input picker{width: 115rpx;}
.common-submit-form .input-box.datetimes .minutes .input,.common-submit-form .input-box.datetimes .minutes .input picker{width: 110rpx;}

.common-submit-form .section-value .input-box.df-select-time{border:0px solid #e5e5e5;}
.df-select-time .start-time,.df-select-time .end-time{float: left; width: 238rpx;height: 60rpx;line-height: 60rpx;border:1px solid #e5e5e5;border-radius: 10rpx;font-size: 24rpx;}
.df-select-time .split-line{float: left;height: 60rpx;line-height: 60rpx;margin: 0rpx 6rpx;color: #c9c9c9;font-size: 28rpx;}
.df-select-time .time-icon{float: left;width: 31rpx;height: 34rpx;margin-left: 12rpx;}
.df-select-time .time-icon .iconfont{color: #c9c9c9;font-size: 44rpx;}
.df-select-time .time-icon image{width: 100%;height: 100%;}
.df-select-time .time-value{margin-left: 55rpx;}
.df-select-time .time-value .data-time{min-width: 100rpx;height: 60rpx;line-height: 60rpx;}
.df-select-time .text{float: left;margin-left: 20rpx;}
.df-select-time .default{color: #bfbfbf;}