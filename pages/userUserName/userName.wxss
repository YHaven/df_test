.container{margin:20rpx auto;}
/*input样式*/
.userName{padding:35rpx 0 43rpx 0;background: #fff;}
.weui-cell{margin: 0;height:66rpx;}
/* .weui-cell .df-search-bar__box{height:66rpx;} */
  /* .df-search-bar__box input{height:66rpx;line-height: 66rpx;}   */
.userName .wrap,
.userName .wrapNoBorder{margin:0 44rpx 10rpx;} 
.userName .wrap{border:solid 1rpx #ddd;padding-left: 20rpx;}
.user-input{width:100%;height:66rpx;font-size:36rpx;display: inline-block;}
.user-input input,
.user-input view{height:66rpx;line-height: 66rpx;}
.wrapNoBorder .tip{display: block;font-size:20rpx;color: #bfbfbf;}
.wrapNoBorder .tip.warning{display:block;margin-bottom:17rpx;}
.confirm{margin:52rpx 44rpx 0 44rpx;}
.confirm .active{background:#029400 !important;color:#fff !important;border:none;border-radius: 10rpx;}
.confirm .default{background:#dfdfdf !important;color:#fff !important;border:none;border-radius: 10rpx;}
.confirm .longTap{background:#179b16 !important;color:#fff;border:none;border-radius:10rpx;}