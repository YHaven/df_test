/* pages/searchOperaList/searchOperaList.wxss */
.search-page{height: 100%;background: #fff;font-size: 28rpx;}
.search-title{height: 70rpx;line-height: 90rpx;border-top: 1rpx solid #eeeeee;border-bottom: 1rpx solid #eeeeee;padding-left: 44rpx;color:#c5c5c5;}
.search-item{margin: 0 0 0 30rpx; max-height: 125rpx; border-bottom: 1rpx solid #eee; padding: 20rpx 35rpx;color:#666666;}
.search-item view {overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;word-wrap:break-word;word-break: break-all;}
.search-item.last-item{border-bottom: 0;}
.empty{display:flex; flex-direction:column;align-items: center; justify-content: center;margin-top: 140rpx;}
.empty-img{width: 194rpx; height:176rpx; }
.empty-tip{color: #a0a0a0;}
.search-result .troupe-search-result{border-bottom: 1rpx solid #eee;}
.search-btn-color{color: #10aeff !important;}
