.authentication checkbox-group {display: flex;justify-content: center;}
.authentication .checkboxWrap {height: 60rpx;width: 340rpx; margin: 20rpx 10rpx;}
/*城市*/
.city_view { margin-top: 1rpx;display: flex;justify-content: space-around; }
.city .content{ height: 90rpx;line-height: 90rpx;margin-left: 45rpx; width: 610rpx; text-overflow: ellipsis;white-space:nowrap;overflow: hidden;color: #f90100;font-size: 28rpx;position: relative;}
.city .chooseCity{height: 90rpx;line-height: 90rpx;width: 50rpx;font-size: 50rpx;color:#c9c8cd;}

/*时长*/

.buttonGroup {position: fixed;bottom: 0; z-index: 1;}
.list.buttonGroup .reset,
.list.buttonGroup .confirm{margin:0;width:50%;float:left;border: 1rpx solid #eeeeee;height: 88rpx;line-height: 88rpx;}
.list.buttonGroup .reset{background: #fff;color:#000;border-radius: 0;}
.list.buttonGroup .confirm{background: #f94551;color:#fff;border-radius: 0;border-left: 0;}

.time .content{margin-left:20rpx;padding-bottom:20rpx;}
.time checkbox-group .checkbox{display:block;float:left;width:33%;}

/*公用样式*/
checkbox{display: none;}
.checkboxWrap{font-size:28rpx;margin-right:20rpx;margin-top:20rpx;border:solid 1rpx #eee;text-align: center;border-radius:10rpx;height: 60rpx;line-height: 60rpx;}
.itemNoCheck{border-radius:10rpx;font-size: 28rpx;}
.itemChecked{border-radius:10rpx;font-size: 28rpx;color:#fff;background:#f94551;}
.deliver{text-align: center;width:4%;line-height: 60rpx;color:#c9c9c9;height: 60rpx;}
.extra{margin:20rpx 0 0 0;}