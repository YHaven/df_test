@import "icon.wxss";
/* button 样式 */
button.default{background: #ffffff;}
.iyanyi-btn-warning{background: #f94551;color: #ffffff;}
.iyanyi-btn-warning-hover{background: #d10714;}
.iyanyi-btn-default{background: #ffffff;}
.iyanyi-btn-default-hover{background: #dfdfdf;}
.iyanyi-opration button{width: 138rpx;height: 54rpx;float: right;line-height: 54rpx;font-size: 24rpx;padding: 0rpx;margin-top: 24rpx;margin-right: 20rpx;}
/* input */
.input-placeholder{color: #b2b2b2;}
/* 网络超时中断默认页 */
.timeout-board{width: 100%;color: #9b9b9b;font-size: 26rpx;}
.timeout-board image{width:235rpx;height: 177rpx;margin-top: 100rpx;margin-bottom: 35rpx; }
.timeout-board .refresh-btn{font-size: 34rpx;color: #576b95;margin-top: 58rpx;}
/* 错误提示 */
.warn-tip{background: #e64340;min-height: 35px;line-height: 35px;text-align: center;color: #ffffff;font-size: 30rpx;position: fixed;top: -35px;width: 100%;z-index: 19;opacity: 0;}
.warn-tip .icon-text{display: inline-block;height:32rpx;width: 32rpx;margin-right: 16rpx;}
.warn-tip icon{float: left;margin-top: 3rpx;}
/* 屏幕中间信息提示 */
.message-toast{position: fixed;left: 0rpx;top: 0rpx;right: 0rpx;bottom: 0rpx;z-index: 10;}
.message-toast .message-mask{text-align: center; position: absolute;top: 40%;width: 100%;}
.message-toast .message-content{display: inline-block; background: rgba(0, 0, 0, 0.7);color: #ffffff;min-width: 268rpx;height: 70rpx;line-height: 70rpx;font-size: 26rpx;border-radius: 8rpx;}
.message-toast .message-content .icon-text{display: inline-block;height:32rpx;width: 32rpx;margin-right: 10rpx;}
.message-toast .message-content icon{float: left;margin-top: 3rpx;}
/* 列表页没有数据 */
.no-list .no-data-img{text-align: center;color: #9b9b9b;font-size: 26rpx;margin-bottom: 66rpx;}
.no-list .no-data-img image{width: 194rpx;height: 176rpx;margin-top: 100rpx;margin-bottom: 25rpx;}
/* 通用表单样式 */
.common-form{background: #ffffff;border-top: 1rpx solid #e5e5e5;border-bottom: 1rpx solid #e5e5e5;padding-left: 30rpx;}
.common-form .form-section{border-bottom: 1rpx solid #e5e5e5;}
.common-form .form-section:last-child{border-bottom:0rpx;}
.common-form .section-value{height: 86rpx;font-size: 34rpx;color: #000000;margin-right: 228rpx;}
.common-form .form-section.code{position: relative;}
.common-form .code-btn{width: 228rpx;position: absolute;right: 0rpx;top: 20rpx;font-size: 34rpx;color: #bfbfbf;text-align: center;border-left: 1px solid #e5e5e5;}
.common-form .code-btn.pass{color: #576b95;}

.common-form-2{padding-left: 20rpx;}
.common-form-2 .form-section{border-bottom: 1rpx solid #e5e5e5;height: 90rpx;}
.common-form-2 .form-section .section-title{font-size: 34rpx;float: left;height: 90rpx;line-height: 90rpx;}
.common-form-2 .form-section .section-value{float: left;height: 90rpx;line-height: 90rpx;margin-left: 20rpx;}
.common-form-2 .form-section .section-op{float: right;height: 90rpx;line-height: 90rpx;margin-right: 30rpx;font-size: 34rpx;color: #bfbfbf;}
.common-form-2 .form-section:last-child{border-bottom: 0rpx;}


/* 底部样式 */
.footer-bottom{text-align: center;font-size: 26rpx;color: #9b9b9b;margin-top: 50rpx;padding-bottom: 50rpx;}
.footer-bottom .info-2{font-size: 24rpx;}
/* 数据加载列表底部样式 */
.data-tip{margin: 30rpx 0rpx;text-align: center;font-size: 22rpx;color: #b2b2b2;}
.data-tip .img-line{width: 480rpx;height: 34rpx;margin: 0 auto;margin-bottom: 16rpx;}
.data-tip .img-line image{width: 100%;height: 100%;}
.to-top{width: 64rpx;height: 64rpx;position: fixed;bottom: 30rpx;right: 30rpx;z-index: 1;}
.to-top image{width: 100%;height: 100%;}

/* 模态框公共样式 */
.iyanyi-dialog{position: fixed;top: 0rpx;left: 0rpx;right: 0rpx;bottom: 0rpx;background: rgba(0, 0, 0, 0.7);z-index: 10;}
.iyanyi-dialog .dialog{background: #ffffff;width: 560rpx;border-radius: 10rpx;margin: 0 auto;margin-top: 255rpx;text-align: center;font-size: 30rpx;}
.iyanyi-dialog .dialog-header{padding-top: 48rpx;}
.iyanyi-dialog .dialog-body{margin-top: 25rpx;}
.iyanyi-dialog .dialog-footer{border-top: 1px solid #d2d3d5;display: flex;font-size: 36rpx;}
.iyanyi-dialog .cancel{border-right: 1px solid #d2d3d5;}
.iyanyi-dialog .confirm{color: #09bb07;}
.iyanyi-dialog .cancel,.iyanyi-dialog .confirm{flex: 1;padding: 26rpx 0rpx;}
/* 底部导航 */
.nav-block{display: flex;text-align: center;position: fixed;bottom: 0px;width: 100%;background-color: #fff;border-top: 1px solid #f4f4f4;z-index: 10;}
.nav-item{flex: 1;padding-top:10rpx;padding-bottom: 2rpx; color: #999;font-size: 20rpx;}
.nav-item.active{color: #f94551;}
.nav-icon{display: inline-block;width: 62rpx;height: 55rpx;}
.nav-icon image{width: 100%;height: 100%;}

/* 自定义图集 */
.photo-box{position: fixed;left: 0rpx;top: 0rpx;right: 0rpx;bottom: 0rpx;background: rgba(0, 0, 0, 0.8);z-index: 20;color: #ffffff;font-size: 28rpx;}
.photo-box .number{font-size: 34rpx;text-align: center;margin-top: 40rpx;}
.photo-box .photo-slider{width: 100%;height: 800rpx;margin-top: 220rpx;}
.photo-box .photo-slider image{width: 100%;}
.photo-box .photo-title{font-size: 34rpx;text-align: center;margin-bottom: 40rpx;}
.photo-box .photo-info{margin-top: 28rpx;}
/* 遮罩层 */
.mask-box{position: fixed;left: 0rpx;top: 0rpx;right: 0rpx;bottom: 0rpx;background: rgba(0, 0, 0, 0.5);}
/* 内容框 */
.block{background: #ffffff;border-bottom: 1px solid #e5e5e5;border-top: 1px solid #e5e5e5;margin-bottom: 20rpx;}
/* 时间选择样式 */
.df-select-time .start-time,.df-select-time .end-time{float: left; width: 295rpx;height: 60rpx;line-height: 60rpx;border:1px solid #eeeeee;border-radius: 10rpx;font-size: 24rpx;}
.df-select-time .split-line{float: left;height: 60rpx;line-height: 60rpx;margin: 0rpx 6rpx;color: #c9c9c9;font-size: 28rpx;}
.df-select-time .time-icon{float: left;width: 31rpx;height: 34rpx;margin-left: 12rpx;}
.df-select-time .time-icon .iconfont{color: #c9c9c9;font-size: 44rpx;}
.df-select-time .time-icon image{width: 100%;height: 100%;}
.df-select-time .time-value{margin-left: 55rpx;}
.df-select-time .time-value .data-time{min-width: 100rpx;height: 60rpx;line-height: 60rpx;}
.df-select-time .text{float: left;margin-left: 20rpx;}
.df-select-time .default{color: #bfbfbf;}
.dfdt-ordercreate {text-align: center;}
.dfdt-ordercreate picker {margin-top: -2rpx;}



