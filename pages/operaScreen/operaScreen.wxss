page{padding-bottom: 18rpx;}
.operaTypeContainer{background: #fff;margin-bottom: 100rpx;}

.list{width:100%;padding:0;}
.list .title {display:flex;height:50rpx;background:#ebebeb;padding: 0 22rpx;justify-content:space-between;}
.list .title .type{display: block;height:50rpx;line-height: 50rpx;font-size: 28rpx;}
.list .title .arrow{height: 50rpx;line-height: 50rpx;font-family: 50rpx;color: #c9c9c9;font-size: 40rpx;}
.selected.icon-xiala{display: inline-block;transform: rotate(180deg);color: #f94551 !important;} 

/*剧目类型*/
.operaType .content{margin-left:20rpx;margin-bottom:20rpx;}
.operaType checkbox-group .checkbox{display:block;float:left;width:25%;}
/*可约档期*/
.schedule .content{margin:20rpx 20rpx;display: flex;}
.schedule .content .deliver{margin: 10rpx 0;}
.schedule .content picker{width:48%;}
.schedule .content picker .picker{margin:10rpx;border:solid 1px #eee; height: 60rpx; border-radius: 10rpx;line-height: 60rpx;font-size: 28rpx;display: flex;align-items: center;justify-content: space-between;}
.schedule .content picker .picker>view{display: flex;align-items: center;}
.list .content .picker .calendar{padding: 0 10rpx; color: #c9c9c9;font-size: 40rpx;}
.list .content .picker .calendar-clear{float: right; color: #dddddd; padding-right: 20rpx;}

/*演出价*/
.price .content{margin-left:20rpx;padding-bottom:20rpx;}
.price checkbox-group .checkbox{display:block;float:left;width:25%;}
.extra{padding-right:20rpx;display: flex;}
.extra .inputWrap{width:46%;height:60rpx;border:solid 1px #eee;border-radius: 10rpx;line-height: 60rpx;padding: 2rpx 10rpx;}
.schedule .content picker .picker{margin:10rpx;border:solid 1px #eee;} 
